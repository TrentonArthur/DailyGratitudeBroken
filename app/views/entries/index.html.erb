<div class="page-header">
  <h1>Entries</h1>
</div>

<p><a href="/entries/new" class="btn btn-primary">Add a New Entry</a></p>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Text</th>
      <th>User</th>
      <th>Image</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @entries.each do |entry| %>
      <tr>
        <td><%= entry.text %></td>
        <td><%= entry.user %></td>
        <td><%= entry.image %></td>
        <td>
          <a href="/entries/<%= entry.id %>" class="btn btn-primary">
            <i class="fa fa-search-plus"></i>
          </a>
        </td>
        <td>
          <a href="/entries/<%= entry.id %>/edit" class="btn btn-warning">
            <i class="fa fa-edit"></i>
          </a>
        </td>
        <td>
          <a href="/delete_entry/<%= entry.id %>" class="btn btn-danger">
            <i class="fa fa-trash-o"></i>
          </a>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

